{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[sql]": {
    "editor.defaultFormatter": "bradymholt.pgformatter"
  },
  "[postgres]": {
    "editor.defaultFormatter": "bradymholt.pgformatter"
  },
  "typescript.preferences.quoteStyle": "double",
  "typescript.preferences.useAliasesForRenames": false,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.jsxAttributeCompletionStyle": "braces",
  "json.schemas": [
    {
      "fileMatch": ["schema/**/*schema.json"],
      "url": "./schema/meta.schema.json"
    },
    {
      "fileMatch": ["schema/api/*schema.json"],
      "url": "./schema/api.schema.json"
    },
    {
      "fileMatch": ["config.json"],
      "url": "./schema/config.schema.json"
    },
    {
      "fileMatch": ["configs/database.json"],
      "url": "./schema/database.schema.json"
    },
    {
      "fileMatch": ["public/locales/*/layout.json"],
      "url": "./schema/localization/layout.schema.json"
    },
    {
      "fileMatch": ["public/locales/*/common.json"],
      "url": "./schema/localization/common.schema.json"
    },
    {
      "fileMatch": ["public/locales/*/auth.json"],
      "url": "./schema/localization/auth.schema.json"
    },
    {
      "fileMatch": ["public/locales/*/components.json"],
      "url": "./schema/localization/components.schema.json"
    },
    {
      "fileMatch": ["public/locales/*/errors.json"],
      "url": "./schema/localization/errors.schema.json"
    },
    {
      "fileMatch": ["public/locales/*/account.json"],
      "url": "./schema/localization/account.schema.json"
    },
    {
      "fileMatch": ["public/locales/*/blog.json"],
      "url": "./schema/localization/blog.schema.json"
    },
    {
      "fileMatch": ["public/locales/*/admin.json"],
      "url": "./schema/localization/admin.schema.json"
    },
    {
      "fileMatch": ["public/locales/*/frontend-mentor.json"],
      "url": "./schema/localization/frontend-mentor.schema.json"
    },
    {
      "fileMatch": ["public/locales/*/fm-comments.json"],
      "url": "./schema/localization/fm-comments.schema.json"
    }
  ],
  "xmlTools.enforcePrettySelfClosingTagOnFormat": true,
  "xmlTools.splitAttributesOnFormat": true,
  "pgFormatter.commaBreak": true,
  "pgFormatter.noGrouping": true,
  "pgFormatter.formatType": true
}
