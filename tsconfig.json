{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#scripts": ["scripts/_index.js"],
      "#environment/*": ["environment/*"],
      "#schema/*": ["schema/*"],
      "#codegen/*": ["src/codegen/*/_index.ts"],
      "#browser": ["src/browser/_index.ts"],
      "#browser/*": ["src/browser/*/_index.ts"],
      "#server/*": ["src/server/*/_index.ts"],
      "#database": ["src/database/_index.ts"],
      "#database/*": ["src/database/*/_index.ts"],
      "#assets": ["src/assets/_index.ts"],
      "#assets/*": ["src/assets/*"],
      "#lib/*": ["src/lib/*/_index.ts"],
      "#store/*": ["src/browser/store/*/_index.ts"],
      "#pages/*": ["src/pages/*"],
      "#components/*": ["src/components/*/_index.ts"],
      "#styles/*": ["src/styles/*"],
      "#types/*": ["src/types/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "ts-node": {
    // don't need typecheck here
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["next-env.d.ts", "additional.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "templates"]
}
