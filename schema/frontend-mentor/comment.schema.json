{
  "$id": "http://schemas.com/frontend-mentor/comment.schema.json",
  "title": "FMComment",
  "description": "Comment specific to the frontend mentor challenge.",
  "type": "object",
  "required": [
    "id",
    "created_at",
    "name",
    "content",
    "likes",
    "dislikes",
    "avatar_url"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "/types/serial.schema.json"
    },
    "created_at": {
      "$ref": "/types/dates/iso-datetime.schema.json"
    },
    "parent_id": {
      "oneOf": [{ "$ref": "/types/serial.schema.json" }, { "type": "null" }]
    },
    "name": {
      "type": "string",
      "minLength": 5,
      "maxLength": 25
    },
    "content": {
      "type": "string",
      "description": "Markdown",
      "minLength": 5,
      "maxLength": 1024
    },
    "likes": {
      "type": "integer",
      "minimum": 1
    },
    "dislikes": {
      "type": "integer",
      "minimum": 0
    },
    "avatar_url": {
      "type": "string",
      "format": "uri"
    }
  }
}
