{
  "$id": "http://schemas.com/account/profile/init.schema.json",
  "title": "AccountProfileInit",
  "description": "Profile initializer.",
  "type": "object",
  "required": ["name"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "description": "The name shown in the link. Only latin lower-cased letters allowed.",
      "type": "string",
      "minLength": 5,
      "maxLength": 15,
      "pattern": "^[a-z]+$"
    },
    "full_name": {
      "description": "The name shown on the profile card.",
      "type": "string",
      "minLength": 5,
      "maxLength": 25
    },
    "avatar_file": {
      "type": "string"
    }
  }
}
