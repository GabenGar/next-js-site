{
  "$id": "http://schemas.com/account/profile/base.schema.json",
  "title": "AccountProfile",
  "description": "The profile of an account.",
  "type": "object",
  "required": ["id", "created_at", "updated_at", "account_id", "name"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "/types/serial.schema.json"
    },
    "created_at": {
      "$ref": "/types/dates/iso-datetime.schema.json"
    },
    "updated_at": {
      "$ref": "/types/dates/iso-datetime.schema.json"
    },
    "account_id": {
      "$ref": "/types/serial.schema.json"
    },
    "name": {
      "description": "The name shown in the link. Only latin lower-cased letters allowed.",
      "type": "string",
      "minLength": 5,
      "maxLength": 15,
      "pattern": "^[a-z]+$"
    },
    "full_name": {
      "description": "The name shown on the profile card.",
      "type": "string",
      "minLength": 5,
      "maxLength": 25
    },
    "avatar_url": {
      "description": "The file of the avatar.",
      "type": "string"
    }
  }
}
